<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000"
    android:orientation="vertical">

    <!-- Top Part -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- TextView 1 -->
        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="CSK"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="38dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="38dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">


            <!-- TextView 2 -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="214/6"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_above="@+id/textView3"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="4dp"/>

            <!-- TextView 3 -->

            <!-- TextView 4 -->
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="20" />

        </LinearLayout>
        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="LIVE\n2nd"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_above="@+id/textView5"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="38dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="35dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <!-- TextView 5 -->
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7/0"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_above="@+id/textView6"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="4dp"/>

            <!-- TextView 6 -->
            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.4"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_above="@+id/textView7"
                android:layout_marginBottom="25dp"/>
        </LinearLayout>

        <!-- TextView 7 -->
        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="RCB"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="38dp"/>
    </LinearLayout>

    <!-- Bottom Part -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginBottom="635dp"
        android:background="#124413">

        <TextView
            android:id="@+id/player1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:text="Kohli" />

        <TextView
            android:id="@+id/player2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="12dp"
            android:text="du Plessis" />

        <TextView
            android:id="@+id/player1score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@+id/player1"
            android:text="6(1)" />

        <TextView
            android:id="@+id/player2score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@+id/player2"
            android:text="1(3)" />

        <!--    <TextView-->
        <!--        android:id="@+id/bowler"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_marginBottom="12dp"-->
        <!--        android:layout_marginLeft="8dp"-->
        <!--        android:gravity="center"-->
        <!--        android:layout_toLeftOf="@+id/overs"-->
        <!--        android:layout_alignBottom="@+id/bottom_background"-->
        <!--        android:text="TextView" />-->

        <!--    <TextView-->
        <!--        android:id="@+id/overs"-->
        <!--        android:layout_width="wrap_content"-->
        <!--        android:layout_height="wrap_content"-->
        <!--        android:layout_marginBottom="12dp"-->
        <!--        android:layout_marginLeft="8dp"-->
        <!--        android:layout_marginRight="8dp"-->
        <!--        android:layout_alignParentRight="true"-->
        <!--        android:layout_alignBottom="@+id/bottom_background"-->
        <!--        android:text="TextView" />-->
        <TextView
            android:id="@+id/bowler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/overs"
            android:text="Deshpande" />

        <TextView
            android:id="@+id/overs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="0/7 (0.4)" />
    </RelativeLayout>
</LinearLayout>
