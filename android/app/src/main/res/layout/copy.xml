<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Android.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Android.AppWidgetContainer">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="42dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/appwidget_text"
        style="@style/Widget.Android.AppWidget.InnerView"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/imageView3"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/bowler"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/appwidget_text2"
        style="@style/Widget.Android.AppWidget.InnerView"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_below="@+id/appwidget_text"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/imageView3"
        android:contentDescription="@string/appwidget_text"
        android:text="@string/bowler"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_alignBottom="@+id/appwidget_text"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/appwidget_text"

        android:text="TextView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_marginStart="8dp"
        android:layout_alignBottom="@+id/appwidget_text2"
        android:layout_toEndOf="@+id/appwidget_text2"
        android:text="TextView" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="10dp"
        android:layout_toEndOf="@+id/textView"
        android:layout_toStartOf="@+id/imageView2"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="82dp"
        android:layout_height="23dp"
        android:layout_alignBottom="@+id/textView4"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="0dp"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_toEndOf="@+id/textView4"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="42dp"
        android:layout_height="54dp"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignParentEnd="true"
        tools:src="@tools:sample/avatars" />
</RelativeLayout>

